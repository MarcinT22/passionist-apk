<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.info.pasjonisci" version="1.0.2" xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Św. Paweł od Krzyża</name>
    <description>
        Aplikacja Święty Paweł od Krzyża powstała z okazji jubileuszu 300-lecia istnienia Zgromadzenia Zakonnego Męki Pana naszego Jezusa Chrystusa (PASJONISTÓW). W aplikacji została przybliżona postać Założyciela Św. Pawła od Krzyża oraz Jego dzieło.
    </description>
    <author href="https://pasjonisci.info.pl" email="tau@onet.com.pl">
        Parafia Św. Pawła od Krzyża w Wiśle
    </author>

    <content src="index.html"/>
    <access origin="*"/>
    <access origin="mailto:*" launch-external="yes" />
    <allow-navigation href="*"/>
    <allow-intent href="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <allow-navigation href="*"/>
    <access origin="*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <icon src="icon.png"/>
    <gap:config-file platform="android" parent="/manifest">
        <application android:theme="@android:style/Theme.NoTitleBar">
        </application>
    </gap:config-file>


    <preference name="SplashScreenBackgroundColor" value="#FFFFFF"/>
    <preference name="SplashMaintainAspectRatio" value="true"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>


    <preference name="target-device" value="handset"/>
    <preference name="fullscreen" value="false"/>
    <preference name="permissions" value="none"/>


    <preference name="orientation" value="portrait"/>
    <preference name="BackgroundColor" value="#ffffff"/>
    <preference name="StatusBarBackgroundColor" value="#41270c"/>
    <preference name="HeaderColor" value="#41270c"/>

    <preference name="DisallowOverscroll" value="true"/>
    <preference name="StatusBarOverlaysWebView" value="true"/>
    <preference name="HeaderColor" value="#41270c"/>

    <plugin name="cordova-plugin-statusbar" spec="^2.2.3"/>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2"/>
    <plugin name="cordova-plugin-network-information" spec="^2.0.2"/>

    <preference name="android-minSdkVersion" value="24"/>
    <preference name="android-targetSdkVersion" value="29" />

</widget>
